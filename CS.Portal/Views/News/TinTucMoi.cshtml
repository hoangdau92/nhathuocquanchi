@using CS.Portal.Common;
@using Core_MVC.Helpers
@model IEnumerable<CS.Portal.Core.EF.CMS_News>

@if (Model != null && Model.Count() > 0)
{
    <div class="carousel slide" data-ride="carousel" data-type="multi" data-interval="0" id="c-ttm">
        <div class="carousel-inner">
            @{ int i = 0;}
            @foreach (var item in Model)
            {
                i++;
                if (i == 1)
                {
                    <div class="item row active">
                        <div class="col-sm-4 col-xs-12">
                            <div class="item-img">
                                <a title="@item.TITLE" href="@Utilities.UrlContent_2(item.CMS_Categories.KEY, item.TITLE, item.ID.ToString())">
                                    <img src="@Url.Content(@item.PICTURE)" alt="anh tin bai" />
                                </a>
                            </div>
                            <div class="item-content">
                                <a title="@item.TITLE" href="@Utilities.UrlContent_2(item.CMS_Categories.KEY, item.TITLE, item.ID.ToString())">
                                    <h4>@item.TITLE</h4>
                                </a>
                                @if (item.EXCERPT != null && item.EXCERPT.Length > 51)
                                {
                                    <p>@Html.Raw(Utilities.ReturnSubString(50, item.EXCERPT))</p>
                                }
                                else
                                {
                                    <p>@Html.Raw(item.EXCERPT)</p>
                                }
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="item row">
                        <div class="col-sm-4 col-xs-12">
                            <div class="item-img">
                                <a title="@item.TITLE" href="@Utilities.UrlContent_2(item.CMS_Categories.KEY, item.TITLE, item.ID.ToString())">
                                    <img src="@Url.Content(@item.PICTURE)" alt="anh tin bai" />
                                </a>
                            </div>
                            <div class="item-content">
                                <a title="@item.TITLE" href="@Utilities.UrlContent_2(item.CMS_Categories.KEY, item.TITLE, item.ID.ToString())">
                                    <h4>@item.TITLE</h4>
                                </a>
                                @if (item.EXCERPT != null && item.EXCERPT.Length > 51)
                                {
                                    <p>@Html.Raw(Utilities.ReturnSubString(50, item.EXCERPT))</p>
                                }
                                else
                                {
                                    <p>@Html.Raw(item.EXCERPT)</p>
                                }
                            </div>
                        </div>
                    </div>
                }

            }
        </div>
        <div class="left carousel-qc-control">
            <a href="#c-ttm" role="button" data-slide="prev">
                <
            </a>
        </div>
        <div class="right carousel-qc-control">
            <a href="#c-ttm" role="button" data-slide="next">
                >
            </a>
        </div>
    </div>
                }



@Html.Script(
    @<script type="text/javascript">
        $(function () {
            $('.block-tintucmoi .carousel[data-type="multi"] .item').each(function () {
                var next = $(this).next();
                if (!next.length) {
                    next = $(this).siblings(':first');
                }
                next.children(':first-child').clone().appendTo($(this));

                for (var i = 0; i < 1; i++) {
                    next = next.next();
                    if (!next.length) {
                        next = $(this).siblings(':first');
                    }

                    next.children(':first-child').clone().appendTo($(this));
                }
            });


        });
    </script>
)