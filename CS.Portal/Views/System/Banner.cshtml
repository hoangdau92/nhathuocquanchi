@{
    Random rnd = new Random();
    int bg_img = rnd.Next(1, 4);
}

<div class="hero-wrap hero-bread" style="background-image: url('@Url.Content("~/Images/Banner/bg_"+bg_img+".jpg")');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-0 bread">@ViewBag.TITLE</h1>
            </div>
        </div>
    </div>
</div>
